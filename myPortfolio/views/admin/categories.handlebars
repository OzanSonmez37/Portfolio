<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About</title>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <section class="title">
      <div class="title-info">
        <h1 class="title-name">Categories</h1>
      </div>
    </section>

    <nav class="navbarBottom">
      <ul>
        <li class="active"><a href="/admin/categories">Categories</a></li>
        <li class="active"><a href="/admin/projectsAdmin">Projects</a></li>
      </ul>
    </nav>

    <section id="aboutus" class="md-padding">
      <div class="container">
        <div class="row">
          <div class="col-md-4">

            <form
              action=""
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="row" style="margin-top: 50px">
                <div class="col-md-10">
                  <div class="form-group w-100 mx-auto">
                    <input
                      class="form-control"
                      id="projectName"
                      name="name"
                      type="text"
                      placeholder="Category Name *"
                      required="required"
                      data-validation-required-message="Please enter category name."
                    />
                    <p class="help-blog text-danger"></p>
                  </div>
                
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-10 login-button" style="display: flex; justify-content: center;">
                  <div id="success"></div>
                  <button
                    class="btn btn-success rounded-pill px-3"
                    type="submit"
                    style="margin-left: 0;"
                  >Add Category</button>
                </div>
              </div>
            </form>

          </div>
          <div class="col-md-8">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>NAME</th>
                  <th>DELETE</th>
                </tr>
              </thead>
              <tbody>
                {{#each categories}}
                <tr>
                  <td>{{_id}}</td>
                  <td>{{name}}</td>
                  <td>
                    <form action="/admin/categories/{{_id}}?_method=DELETE" method="POST">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-danger deleteButton">DELETE</button>
                    </form>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

  </body>
</html>