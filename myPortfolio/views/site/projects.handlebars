<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About</title>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>

    <section class="title">
      <div class="title-info">
        <h1 class="title-name">Projects</h1>
      </div>
    </section>

    {{#if sessionFlash.message}}
      <div class="{{sessionFlash.type}} messageBox">
        {{sessionFlash.message}}
      </div>
    {{/if}}


<div class="row">
  <!-- Sol taraf: Projeler -->
  <div class="col-md-9 projects-container">
    <!-- İlk 4 proje -->
    <div class="row mb-4">
      {{#each topProjects}}
        <div class="col-md-3 mb-3">
          <div class="card h-100">
            <img src="{{project_image}}" class="card-img-top" alt="..." />
            <div class="card-body">
              <p class="card-text">
                <i class="bi bi-person-fill"></i>
                <small class="text-muted">{{author.username}} -</small>
                <i class="bi bi-calendar-event-fill"></i>
                <small class="text-muted">{{generateDate date "MMM DD YYYY"}}</small>
              </p>
              <h5 class="card-title">{{projectName}}</h5>
              <p class="card-text">{{truncate projectDescription 110}}</p>
              <a href="/projects/{{_id}}" class="text-danger fw-bold d-block">Show More</a>
              <a href="#" class="btn btn-primary goGithub">Go GitHub</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- 4’ten sonrası -->
    <div class="row">
      {{#each otherProjects}}
        <div class="col-md-3 mb-3">
          <div class="card h-100">
            <img src="{{project_image}}" class="card-img-top" alt="..." />
            <div class="card-body">
              <p class="card-text">
                <i class="bi bi-person-fill"></i>
                <small class="text-muted">{{author.username}} -</small>
                <i class="bi bi-calendar-event-fill"></i>
                <small class="text-muted">{{generateDate date "MMM DD YYYY"}}</small>
              </p>
              <h5 class="card-title">{{projectName}}</h5>
              <p class="card-text">{{truncate projectDescription 110}}</p>
              <a href="/projects/{{_id}}" class="text-danger fw-bold d-block">Show More</a>
              <a href="#" class="btn btn-primary goGithub">Go GitHub</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <!-- Sağ taraf: Kategoriler -->
  <div class="col-md-3 categoryCard">
    <div class="categories p-2 category">

      <!-- Search alanı  -->
      <div class="mb-5">
        <form action="/projects/search" method="GET">
          <div class="input-group input-group-sm w-100">
            <input 
              type="text" 
              class="form-control" 
              placeholder="Search..." 
              id="categorySearch"
              name="look"
            >
            <button class="btn btn-outline-secondary btn-sm" type="submit">
              <i class="bi bi-search"></i>
            </button>
          </div>
        </form>
      </div>




      <h6 class="fw-bold mb-3 categoryTitle">CATEGORIES</h6>
      <ul class="list-group list-group-flush">
        {{#each categories}}
          <li
            class="list-group-item d-flex justify-content-between align-items-center px-3 py-2"
          >
            <a href="/projects/category/{{_id}}" class="small text-decoration-none text-dark">{{name}}</a>
            <span class="small" style="color: #5daa34;">({{num_of_projects}})</span>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

   
</div>

    </div>
  </body>
</html>